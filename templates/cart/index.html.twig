{% extends 'base.html.twig' %}


{% block body %}


    <div class="container my-5">
         <h1>Mon panier</h1>

    <div class="row mt-5">

    <div class="col-md-8">
            
            {% for product in cart %}
      <div class="row">
                 
        <div class="col-md-1 mt-3">
            <img 
            src="{{ asset('uploads/' ~ product.object.image) }}" 
            class="img-fluid"
            alt="{{ product.object.name }}">
         </div>
            <div class="col-md-6">
                <strong>{{ product.object.name }}</strong>
                <span class="d-block small"> Prix unitaire : {{ product.object.pricewt|price}} </span>
             </div>
            
     <div class="col-md-2 text-right">
    <div class="d-flex align-items-center justify-content-end gap-2">
        <a href="{{ path('app_cart_decrease', {
                id: product.object.id,
                origin: app.request.uri|url_encode
            }) }}"
           class="btn btn-sm btn-outline-dark">-</a>

        <span class="badge text-bg-dark py-2 px-3">x {{ product.quantity }}</span>

        <a href="{{ path('app_cart_add', {
                id: product.object.id,
                origin: app.request.uri|url_encode
            }) }}"
           class="btn btn-sm btn-outline-dark">+</a>
    </div>
</div>

         

            <div class="col-md-2">
                <strong> {{ (product.quantity * product.object.pricewt)|price}} </strong>
             </div>
        </div>
      
            {% endfor %}
                 </div>
             
        <div class="col-md-4">
          <div class="bg-light p-3 ">
            <div class="d-flex justify-content-between">
              <span class="fw-bold">Total produit</span>
              <span>{{ totalCartQuantity }} </span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <span class="fw-bold">Prix total</span>
                <span>{{ totalWt|price }}</span>
            </div>

            <div>
               <a href="" class="btn btn-dark w-100 mt-3">Commander </a>
            </div>
           
           </div>
     </div>

</div>


{% endblock %}