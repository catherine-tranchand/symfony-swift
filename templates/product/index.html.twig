
{% extends 'base.html.twig' %}


{% block body %}


    <div class="container my-5">

    <div class="row">
        <div class="col-md-6">
           <img src="{{ asset('uploads/' ~ product.image) }}" 
               class="img-fluid" {# pour rendre l'image responsive et l'adapter au container #}
               alt={{ product.name }}
               style="height: 400px; object-fit: cover;">
    </div>
         <div class="col-md-6">
         <small><i><a href="{{ path('app_category', { slug: product.category.slug } ) }}">{{ product.category }} </a> > {{ product.name }}</small></i>
          <h1>{{ product.name }} </h1>
           <span class="d-block mb-3">{{ product.pricewt|price}} </span>
          {{ product.description|raw }} {# raw filtre -> pour enlever des balises HTML dans le text #}
          <a href="{{ path('app_cart_add', { id : product.id } ) }}" class="btn btn-dark mt-3  w-100">Ajouter au panier</a>
         </div>


        
      </div>




{% endblock %}

