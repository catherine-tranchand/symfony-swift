
{% extends 'base.html.twig' %}


{% block body %}


    <div class="container my-5">
         <h1>{{ category.name }}</h1>

         <p>Cette category contient {{ category.products|length }} produits</p>
<div class="row">
        {% for product in category.products %}

         <div class="col-md-3 text-center">
         <a href="{{ path('app_product', { slug: product.slug } ) }} " class="text-decoration-none" >
           <img src="{{ asset('uploads/' ~ product.image) }}" 
               class="img-fluid" alt="responsive image"
               style="height: 200px; object-fit: cover;">
              
           <span class="d-block fw-bold text-black">  {{ product.name }} </span>
         </a>
         <span class="d-block">{{ product.pricewt|price }}</span> {# |price-> c'est un filtre de Twig/AppExtentions #}
         
         </div>
       

         {% endfor %}

</div>

       

      </div>




{% endblock %}
